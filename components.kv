<blue_ball>
    siz : 30, 30
    canvas:
        Color: 
            rgba: 1, 0.6, 0.4, 1
        Ellipse:
            pos: self.pos
            size: self.siz



<red_ball>:
    siz : 30, 30
    canvas:
        Color: 
            rgba: 0.1, 0.4, 1, 1
        Ellipse:
            pos: self.pos
            size: self.siz


<main>:

    ball_1: ball_1
    ball_2: ball_2
    blue_ball_1 : blue_ball_1

    canvas: 
        Color:
            rgba: 0.1, 0.4, 1, 1
        Rectangle: 
            pos: 0, 30
            size: 4, root.height - 60

        Color:
            rgba: 1, 0.6, 0.4, 1
        Rectangle: 
            pos: root.width - 5, 30
            size: 4, root.height - 60


    Label: 
        font_size : 0
        center_x: root.center_x - 4
        center_y: root.height - 50
        text: "0"

    # right side balls

    red_ball:
        id : ball_1
        x : 3/4 *root.width
        y : (root.center_y/2 )* -1

    # left side balls

    blue_ball: 
        id: blue_ball_1
        x : root.center_x/4
        y : (root.center_y/2 )* -1

    red_ball:
        id: ball_2
        x : root.center_x/4
        y : (root.center_y/2 + 100)* -1

    blue_ball: 
        id: blue_ball_1
        x : root.center_x/4
        y : (root.center_y/2 )* -1



