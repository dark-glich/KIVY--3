<blue_ball>
    siz : 30, 30
    canvas:
        Color: 
            rgba: 1, 0.6, 0.4, 1
        Ellipse:
            pos: self.pos
            size: self.siz



<red_ball>:
    siz : 30, 30
    canvas:
        Color: 
            rgba: 0.1, 0.4, 1, 1
        Ellipse:
            pos: self.pos
            size: self.siz


<main>:

    red_ball_1: red_ball_1
    red_ball_2: red_ball_2
    red_ball_3: red_ball_3
    red_ball_4: red_ball_4
    red_ball_5: red_ball_5

    blue_ball_1 : blue_ball_1
    blue_ball_2 : blue_ball_2
    blue_ball_3 : blue_ball_3
    blue_ball_4 : blue_ball_4
    blue_ball_5 : blue_ball_5

    canvas: 
        Color:
            rgba: 0.1, 0.4, 1, 1
        Rectangle: 
            pos: 0, 30
            size: 4, root.height - 60

        Color:
            rgba: 1, 0.6, 0.4, 1
        Rectangle: 
            pos: root.width - 5, 30
            size: 4, root.height - 60


    Label: 
        font_size : 0
        center_x: root.center_x - 4
        center_y: root.height - 50
        text: "0"

    # right side balls

    red_ball:
        id : red_ball_1
        x : 3/4 *root.width
        y : (root.center_y/2 )* -1

    blue_ball: 
        id: blue_ball_1
        x : 3/4 *root.width
        y : (root.center_y/2 + 200)* -1

    red_ball:
        id : red_ball_2
        x : 3/4 *root.width
        y : (root.center_y/2 + 400)* -1

    blue_ball: 
        id: blue_ball_2
        x : 3/4 *root.width
        y : (root.center_y/2 + 600)* -1

    red_ball:
        id : red_ball_3
        x : 3/4 *root.width
        y : (root.center_y/2 + 800)* -1

    # left side balls

    blue_ball: 
        id: blue_ball_3
        x : root.center_x/4
        y : (root.center_y/2 )* -1

    red_ball:
        id: red_ball_4
        x : root.center_x/4
        y : (root.center_y/2 + 200)* -1

    blue_ball: 
        id: blue_ball_4
        x : root.center_x/4
        y : (root.center_y/2 + 400)* -1

    red_ball:
        id: red_ball_5
        x : root.center_x/4
        y : (root.center_y/2 + 600)* -1

    blue_ball: 
        id: blue_ball_5
        x : root.center_x/4
        y : (root.center_y/2 + 800)* -1


